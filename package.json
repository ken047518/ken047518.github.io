{
  "name": "madeyourday.life",
  "version": "1.0.0",
  "description": "Travel blog and services website",
  "scripts": {
    "dev": "hugo server -D --disableFastRender",
    "build": "npm run build:css && hugo --minify",
    "build:css": "tailwindcss -i ./assets/css/styles.css -o ./static/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/styles.css -o ./static/css/styles.css --watch"
  },
  "keywords": ["hugo", "travel", "blog"],
  "author": "MadeYourDay.Life",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.4.1"
  }
}
